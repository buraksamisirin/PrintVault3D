<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════════════
         PrintVault 3D - Color Palette
         Obsidian Dark Theme with Cyan Accents
         ═══════════════════════════════════════════════════════════════════════════ -->

    <!-- Color Palette -->
    <Color x:Key="BackgroundDark">#0D1117</Color>
    <Color x:Key="BackgroundMedium">#161B22</Color>
    <Color x:Key="BackgroundLight">#21262D</Color>
    <Color x:Key="BackgroundHover">#30363D</Color>
    <Color x:Key="BackgroundSelected">#1F6FEB20</Color>
    
    <Color x:Key="BorderColor">#30363D</Color>
    <Color x:Key="BorderFocused">#58A6FF</Color>
    
    <Color x:Key="TextPrimary">#F0F6FC</Color>
    <Color x:Key="TextSecondary">#8B949E</Color>
    <Color x:Key="TextMuted">#6E7681</Color>
    
    <Color x:Key="AccentCyan">#39D0D8</Color>
    <Color x:Key="AccentBlue">#58A6FF</Color>
    <Color x:Key="AccentGreen">#3FB950</Color>
    <Color x:Key="AccentOrange">#F78166</Color>
    <Color x:Key="AccentPurple">#A371F7</Color>
    <Color x:Key="AccentRed">#F85149</Color>
    <Color x:Key="AccentYellow">#F0C14B</Color>
    <Color x:Key="AccentPink">#DB61A2</Color>

    <!-- Category Colors for visual distinction -->
    <Color x:Key="CategoryColor1">#39D0D8</Color>
    <Color x:Key="CategoryColor2">#A371F7</Color>
    <Color x:Key="CategoryColor3">#3FB950</Color>
    <Color x:Key="CategoryColor4">#F78166</Color>
    <Color x:Key="CategoryColor5">#58A6FF</Color>
    <Color x:Key="CategoryColor6">#F0C14B</Color>
    <Color x:Key="CategoryColor7">#DB61A2</Color>
    <Color x:Key="CategoryColor8">#F85149</Color>

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BackgroundHoverBrush" Color="{StaticResource BackgroundHover}"/>
    <SolidColorBrush x:Key="BackgroundSelectedBrush" Color="{StaticResource BackgroundSelected}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderFocusedBrush" Color="{StaticResource BorderFocused}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
    
    <SolidColorBrush x:Key="AccentCyanBrush" Color="{StaticResource AccentCyan}"/>
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}"/>
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentPurple}"/>
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}"/>
    <SolidColorBrush x:Key="AccentPinkBrush" Color="{StaticResource AccentPink}"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource AccentCyan}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentBlue}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardGlowBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#10FFFFFF" Offset="0"/>
        <GradientStop Color="#00FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Glassmorphism Brush -->
    <LinearGradientBrush x:Key="GlassBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#20FFFFFF" Offset="0"/>
        <GradientStop Color="#08FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Skeleton Loader Gradient (Shimmer Effect) -->
    <LinearGradientBrush x:Key="SkeletonBrush" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#21262D" Offset="0"/>
        <GradientStop Color="#30363D" Offset="0.5"/>
        <GradientStop Color="#21262D" Offset="1"/>
    </LinearGradientBrush>

    <!-- Typography -->
    <FontFamily x:Key="PrimaryFont">Segoe UI Variable, Segoe UI, Inter, Arial</FontFamily>
    <FontFamily x:Key="MonoFont">Cascadia Code, Consolas, Courier New</FontFamily>

</ResourceDictionary>

