<Window x:Class="PrintVault3D.Views.DuplicatesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:PrintVault3D.Models"
        mc:Ignorable="d"
        Title="Manage Duplicates" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Colors.xaml"/>
                <ResourceDictionary Source="/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Manage Duplicates" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="{Binding FileHash, StringFormat='Hash: {0}'}" 
                       FontSize="12" 
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,4,0,0"/>
            <TextBlock Text="The following files have identical content. You can delete redundant copies while keeping the original." 
                       TextWrapping="Wrap"
                       Margin="0,8,0,0"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- List -->
        <Border Grid.Row="1" 
                Background="{StaticResource BackgroundLightBrush}" 
                CornerRadius="8" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1">
            <ListBox x:Name="DuplicatesList" 
                     ItemsSource="{Binding Models}"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}" Padding="8" Margin="0,0,0,4" CornerRadius="4">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource BackgroundHoverBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource BackgroundSelectedBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Model3D}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Thumbnail/Icon -->
                            <Border Width="40" Height="40" CornerRadius="4" Background="{StaticResource BackgroundDarkBrush}" Margin="0,0,12,0">
                                <Image Source="{Binding ThumbnailPath}" Stretch="Uniform" Opacity="0.8"/>
                            </Border>

                            <!-- Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="{Binding FilePath}" FontSize="11" Foreground="{StaticResource TextMutedBrush}" TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="{Binding AddedDate, StringFormat='Added: {0:g}'}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text=" • " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding Category.Name}" FontSize="10" Foreground="{StaticResource AccentCyanBrush}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Style="{StaticResource IconButton}" 
                                        Click="OpenFolder_Click"
                                        ToolTip="Open Folder"
                                        Margin="0,0,8,0">
                                    <Path Fill="{StaticResource TextSecondaryBrush}" Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H10L12,6H19A2,2 0 0,1 21,8H21.03C21.03,8.5 21,21 21,18C21,19.1 20.1,20 19,20M4,8V18H19V8H4Z"/>
                                </Button>
                                <Button Style="{StaticResource DangerButton}" 
                                        Click="Delete_Click"
                                        Content="Delete"
                                        Padding="12,6"
                                        FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Style="{StaticResource PrimaryButton}" 
                    Content="Close" 
                    Click="Close_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>

