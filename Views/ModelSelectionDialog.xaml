<Window x:Class="PrintVault3D.Views.ModelSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Model" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Select a model to link" 
                   Style="{StaticResource SubHeaderText}"
                   Margin="0,0,0,12"/>

        <TextBox Grid.Row="1" 
                 x:Name="SearchBox"
                 Style="{StaticResource SearchTextBox}"
                 TextChanged="SearchBox_TextChanged"
                 Margin="0,0,0,12"/>

        <Border Grid.Row="2" 
                Background="{StaticResource BackgroundMediumBrush}"
                CornerRadius="8"
                Padding="8">
            <ListView x:Name="ModelListView"
                      Background="Transparent"
                      BorderThickness="0"
                      SelectionMode="Single"
                      MouseDoubleClick="ModelListView_MouseDoubleClick">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="Margin" Value="0,2"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border x:Name="Bd" 
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource BackgroundHoverBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource BackgroundSelectedBrush}"/>
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentCyanBrush}"/>
                                            <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                            <TextBlock Text="{Binding OriginalFileName}" 
                                       Style="{StaticResource CaptionText}"
                                       Opacity="0.7"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Style="{StaticResource SecondaryButton}"
                    Content="Cancel"
                    Click="Cancel_Click"
                    Margin="0,0,8,0"/>
            <Button Style="{StaticResource PrimaryButton}"
                    Content="Select"
                    Click="Select_Click"/>
        </StackPanel>
    </Grid>
</Window>

