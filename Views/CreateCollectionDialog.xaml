<Window x:Class="PrintVault3D.Views.CreateCollectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Collection"
        Height="420" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Simple TextBox style -->
        <Style x:Key="DialogTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentCyanBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Color Button Style -->
        <Style x:Key="ColorButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="ColorCircle" 
                                     Fill="{TemplateBinding Background}"
                                     Stroke="Transparent"
                                     StrokeThickness="2"/>
                            <Ellipse x:Name="SelectionRing" 
                                     Stroke="{StaticResource TextPrimaryBrush}"
                                     StrokeThickness="2"
                                     Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ColorCircle" Property="Stroke" Value="{StaticResource TextSecondaryBrush}"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="SelectionRing" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12"
            Background="{StaticResource BackgroundDarkBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="24,16"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock x:Name="DialogTitleText"
                               Text="New Collection" 
                               Style="{StaticResource SubHeaderText}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <Button HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="28" Height="28"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding CancelCommand}">
                        <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                              Fill="{StaticResource TextSecondaryBrush}"
                              Width="14" Height="14"
                              Stretch="Uniform"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24,20">
                    <!-- Name -->
                    <TextBlock Text="Collection Name" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="NameTextBox"
                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource DialogTextBox}"
                             Margin="0,0,0,16"/>

                    <!-- Description -->
                    <TextBlock Text="Description (optional)" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource DialogTextBox}"
                             Height="60"
                             VerticalContentAlignment="Top"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Margin="0,0,0,16"/>

                    <!-- Color Selection -->
                    <TextBlock Text="Color" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    <WrapPanel x:Name="ColorPanel" Margin="0,0,0,16">
                        <Button Style="{StaticResource ColorButton}" Background="#00D9FF" Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" Background="#7B68EE" Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" Background="#FF6B6B" Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" Background="#4ECDC4" Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" Background="#FFE66D" Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" Background="#95E1D3" Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" Background="#F38181" Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" Background="#AA96DA" Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" Background="#FCBAD3" Click="ColorButton_Click"/>
                        <Button Style="{StaticResource ColorButton}" Background="#A8D8EA" Click="ColorButton_Click"/>
                    </WrapPanel>

                    <!-- Pin Option -->
                    <CheckBox x:Name="PinCheckBox"
                              IsChecked="{Binding IsPinned}"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="0,0,0,8"
                              Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M16,12V4H17V2H7V4H8V12L6,14V16H11.2V22H12.8V16H18V14L16,12Z"
                                  Fill="{StaticResource AccentCyanBrush}"
                                  Width="14" Height="14"
                                  Stretch="Uniform"
                                  Margin="0,0,8,0"/>
                            <TextBlock Text="Pin to top of list" VerticalAlignment="Center"/>
                        </StackPanel>
                    </CheckBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="0,0,12,12"
                    Padding="24,16">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                x:Name="EditModeButtons" Visibility="Collapsed">
                        <Button Style="{StaticResource SecondaryButton}"
                                Content="Delete"
                                Foreground="{StaticResource AccentRedBrush}"
                                Padding="16,10"
                                Click="DeleteButton_Click"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding CancelCommand}"
                                Content="Cancel"
                                Padding="20,10"
                                Margin="0,0,12,0"/>
                        <Button x:Name="SaveButton"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding SaveCommand}"
                                Content="Create"
                                Padding="24,10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

