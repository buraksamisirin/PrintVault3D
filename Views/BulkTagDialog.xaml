<Window x:Class="PrintVault3D.Views.BulkTagDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Etiket Ekle"
        Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource MainWindowStyle}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Secili Modellere Etiket Ekle"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <!-- Input -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Etiketler (virgülle ayırın):"
                       Style="{StaticResource CaptionText}"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="TagsTextBox"
                     Style="{StaticResource SearchTextBox}"
                     Height="40"
                     VerticalContentAlignment="Center"
                     Padding="12,0"/>
        </StackPanel>

        <!-- Hint -->
        <TextBlock Grid.Row="2"
                   Text="Örnek: mekanik, dişli, prototip"
                   Style="{StaticResource CaptionText}"
                   Opacity="0.6"
                   Margin="0,8,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="İptal"
                    Style="{StaticResource SecondaryButton}"
                    Width="100"
                    Margin="0,0,12,0"
                    Click="Cancel_Click"/>
            <Button Content="Ekle"
                    Style="{StaticResource PrimaryButton}"
                    Width="100"
                    Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>

